@model IEnumerable<WebApplication1.Models.tbl_Products>

@{
    ViewBag.Title = "ViewProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>View Product</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProviderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
       
      
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
           Category
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
       
        <td>
            <img class="mySlides" src="@Url.Content(@item.Image)" style="width:100px;height:100px;"><br />

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Providers.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Category.Name)
        </td>
       
    </tr>
}

</table>
