@model IEnumerable<WebApplication1.Models.tbl_Cart>

@{
    ViewBag.Title = "ViewCart";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

<h2>ViewCart</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CartId)
        </th>
        <th>
           Retailer
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
       
        <th>
           Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CartId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Providers.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
       
        <td>
            <img src="@Url.Content(item.tbl_Products.Image)" alt="" align="middle" style="height:100px;width:100px;">
            
        </td>
        <td>
            @Html.ActionLink("Start Payment", "Payment", new { id = item.CartId }) |
            @Html.ActionLink("Remove From Cart", "RemoveFromcart", new { id = item.CartId }) 
           
        </td>
    </tr>
}

</table>
